<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutFooter"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/main_footer_bg">

    <View
        android:id="@+id/viewSplit"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDEDED" />

    <RadioGroup
        android:id="@+id/group"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdio_home"
            style="@style/main_footer_bar_radio"	
            android:checked="true"
            android:drawableTop="@drawable/home_bar_bg"
            android:text="@string/main_home" />

        <RadioButton
            android:id="@+id/rdio_choose"
            style="@style/main_footer_bar_radio"
            android:drawableTop="@drawable/choose_bar_bg"
            android:text="@string/main_choose" />

        <RadioButton
            android:id="@+id/rdio_schedule"
            style="@style/main_footer_bar_radio"
            android:drawableTop="@drawable/schedule_bar_bg"
            android:text="@string/main_schedule" />

        <RadioButton
            android:id="@+id/rdio_ny"
            style="@style/main_footer_bar_radio"
            android:drawableTop="@drawable/my_bar_bg"
            android:text="@string/main_my" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@null"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null">

            <View
                android:id="@+id/viewSplitLine"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@null" />

            <TextView
                android:id="@+id/textUnreadLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/viewSplitLine"
                android:layout_toRightOf="@+id/viewSplitLine"
                android:background="@drawable/red_count"
                android:gravity="center"
                android:visibility="gone"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_13" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>